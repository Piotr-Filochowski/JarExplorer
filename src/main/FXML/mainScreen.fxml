<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fillWidth="false" prefHeight="535.0" prefWidth="609.0" xmlns="http://javafx.com/javafx/10.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.Controller">
    <children>
        <MenuBar prefHeight="25.0" prefWidth="615.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#openFileAndLoadIt" text="Open…"/>
                        <MenuItem fx:id="saveFile" mnemonicParsing="false" onAction="#saveFile" text="Save As…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="quit" mnemonicParsing="false" onAction="#quit" text="Quit"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox prefHeight="25.0" prefWidth="571.0" spacing="20.0">
            <children>
                <HBox prefHeight="25.0" prefWidth="342.0" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" text="Add class"/>
                        <Button mnemonicParsing="false" text="Delete class"/>
                    </children>
                </HBox>
                <HBox prefHeight="25.0" prefWidth="227.0" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" text="Add Field"/>
                        <Button mnemonicParsing="false" text="Delete Field"/>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="125.0" prefWidth="574.0">
            <children>
                <TitledPane animated="false" collapsible="false" contentDisplay="BOTTOM" text="Class List">
                    <graphic>
                        <TreeView fx:id="treeOfClasses" onMouseClicked="#reloadFieldAndMethodList" prefHeight="192.0"
                                  prefWidth="353.0"/>
                    </graphic>
                </TitledPane>
                <TitledPane animated="false" collapsible="false" contentDisplay="BOTTOM" text="Fields List">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                    <graphic>
                        <ListView fx:id="listOfFields" prefHeight="192.0" prefWidth="221.0"/>
                    </graphic>
                </TitledPane>
            </children>
        </HBox>
        <HBox prefHeight="33.0" prefWidth="574.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" text="Add Method"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" top="10.0"/>
            </padding>
        </HBox>
        <TitledPane collapsible="false" prefHeight="147.0" prefWidth="613.0" text="Methods">
            <content>
                <ListView fx:id="listOfMethods" prefHeight="122.0" prefWidth="610.0"/>
            </content>
        </TitledPane>
    </children>
</VBox>
